<h1>Listing zombies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @zombies.each do |zomby| %>
  <tr>
    <td><%= zomby.name %></td>
    <td><%= zomby.bio %></td>
    <td><%= zomby.age %></td>
    <td><%= link_to 'Show', zomby %></td>
    <td><%= link_to 'Edit', edit_zomby_path(zomby) %></td>
    <td><%= link_to 'Destroy', zomby, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

